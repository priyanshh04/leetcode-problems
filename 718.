class Solution:
    def findLength(self, A: list[int], B: list[int]) -> int:
        if not A or not B:
            return 0
        if len(B) > len(A):
            A, B = B, A
        n, m = len(A), len(B)
        dp = [0] * (m + 1)
        max_len = 0

        for i in range(1, n + 1):
            for j in range(m, 0, -1):
                if A[i - 1] == B[j - 1]:
                    dp[j] = dp[j - 1] + 1
                    if dp[j] > max_len:
                        max_len = dp[j]
                else:
                    dp[j] = 0
        return max_len

class Solution:
    def totalNQueens(self, n: int) -> int:
        # Sets to track where queens are placed
        cols = set()          # columns
        diag = set()          # row - col
        anti_diag = set()     # row + col
        res = 0

        def backtrack(r):
            nonlocal res
            if r == n:  # all queens placed
                res += 1
                return
            
            for c in range(n):
                if c in cols or (r - c) in diag or (r + c) in anti_diag:
                    continue
                
                # Place queen
                cols.add(c)
                diag.add(r - c)
                anti_diag.add(r + c)
                
                backtrack(r + 1)
                
                # Remove queen (backtrack)
                cols.remove(c)
                diag.remove(r - c)
                anti_diag.remove(r + c)

        backtrack(0)
        return res

class Solution {
    public boolean isAdditiveNumber(String num) {
        int n = num.length();

        for (int i = 1; i <= n / 2; i++) {
            if (num.charAt(0) == '0' && i > 1) break; // leading zero
            for (int j = i + 1; j < n; j++) {
                if (num.charAt(i) == '0' && j - i > 1) break; // leading zero
                String a = num.substring(0, i);
                String b = num.substring(i, j);
                String rest = num.substring(j);

                if (isValid(a, b, rest)) return true;
            }
        }
        return false;
    }

    private boolean isValid(String a, String b, String rest) {
        while (!rest.isEmpty()) {
            String sum = addStrings(a, b);
            if (!rest.startsWith(sum)) return false;
            rest = rest.substring(sum.length());
            a = b;
            b = sum;
        }
        return true;
    }

    private String addStrings(String x, String y) {
        StringBuilder sb = new StringBuilder();
        int i = x.length() - 1, j = y.length() - 1, carry = 0;

        while (i >= 0 || j >= 0 || carry > 0) {
            int sum = carry;
            if (i >= 0) sum += x.charAt(i--) - '0';
            if (j >= 0) sum += y.charAt(j--) - '0';
            sb.append(sum % 10);
            carry = sum / 10;
        }
        return sb.reverse().toString();
    }
}

class Solution {
    public void moveZeroes(int[] nums) {
        if (nums == null || nums.length <= 1) return;

        int j = 0; // position to place next non-zero
        // move non-zeros forward
        for (int i = 0; i < nums.length; i++) {
            if (nums[i] != 0) {
                nums[j++] = nums[i];
            }
        }
        // fill remaining positions with 0
        while (j < nums.length) {
            nums[j++] = 0;
        }

    }
}
